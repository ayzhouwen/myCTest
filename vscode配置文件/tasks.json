    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMakeBuild",
            "type": "shell",
            "command": "cmake ..",
            "args": [],
            "options": {
                "cwd": "${fileDirname}/build" 
            }
        },
        {
            "label": "build",
            "type": "shell",
            "dependsOn": ["CMakeBuild"],
            "command": "make clean; make",
            "options": {
                "cwd": "${fileDirname}/build" 
            }
        }
    ]
}